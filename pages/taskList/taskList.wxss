.page-wrapper {
    background: #f9fafb;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: column;
    flex-direction: column;
    height: 100vh;
    overflow: hidden
}

.fixed-header {
    background: #fff;
    border-bottom: 1rpx solid #eee;
    -webkit-flex-shrink: 0;
    flex-shrink: 0;
    z-index: 99
}

.filter-bar {
    border-top: 1rpx solid #f5f5f5;
    height: 80rpx
}

.filter-bar,.title-wrapper {
    -webkit-align-items: center;
    align-items: center;
    display: -webkit-flex;
    display: flex
}

.right-top-tag {
    margin-right: 10rpx
}

.card-title {
    display: inline-block;
    font-size: 29rpx;
    margin-right: auto
}

.filter-item {
    -webkit-align-items: center;
    align-items: center;
    color: #646566;
    display: -webkit-flex;
    display: flex;
    -webkit-flex: 1;
    flex: 1;
    font-size: 28rpx;
    -webkit-justify-content: center;
    justify-content: center;
    text-align: center
}

.filter-item wx-van-icon {
    margin-right: 10rpx
}

.task-list {
    box-sizing: border-box;
    -webkit-flex: 1;
    flex: 1;
    overflow: hidden;
    padding-bottom: calc(100rpx + env(safe-area-inset-bottom));
    padding-top: 20rpx
}

.card-wrapper {
    background-color: #fff;
    margin-bottom: 20rpx
}

.card-content {
    color: #999;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: column;
    flex-direction: column;
    font-size: 26rpx;
    margin-top: 15rpx
}

.loading-text {
    color: #969799;
    font-size: 24rpx;
    padding: 20rpx;
    text-align: center
}

.my-card .van-card {
    background-color: #fff
}

.my-card .van-card__content {
    -webkit-justify-content: center!important;
    justify-content: center!important
}

.my-card .van-card__bottom {
    margin-top: 12rpx
}
